<Window x:Class="EMA.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMA"
        mc:Ignorable="d"
        Title="MainWindowView"
        Height="450"
        Width="800"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle x:Name="RectHeader"
                   Height="35"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Stretch"
                   Fill="Black"
                   Grid.Row="0"
                   PreviewMouseLeftButtonDown="Rectangle_PreviewMouseLeftButtonDown">
        </Rectangle>
        <Grid HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ElementName=RectHeader, 
                                                  Path=ActualHeight}"/>
                <ColumnDefinition Width="{Binding ElementName=RectHeader, 
                                                  Path=ActualHeight}" />
                <ColumnDefinition Width="{Binding ElementName=RectHeader, 
                                                  Path=ActualHeight}" />
                <ColumnDefinition Width="15" />
            </Grid.ColumnDefinitions>
            <Button Background="Transparent"
                    BorderBrush="Transparent"
                Grid.Column="2" 
                Width="30"
                Grid.Row="0"
                Height="30"
                Margin="0,-3,0,0"
                Cursor="Hand"
                ClickMode="Press">
            <TextBlock Text="X"
                       Margin="0,-7,0,0"
                       Foreground="Gray"
                       FontSize="28" />
            </Button>
            <Button Grid.Column="1"
                    BorderBrush="Transparent"
                    BorderThickness="2"
                    Width="30"
                    Grid.Row="0"
                    Height="30"
                    Margin="0,-2,0,0"
                    Cursor="Hand"
                    Background="Transparent"
                    ClickMode="Press">
                <Image Source="\Ressources\reduce.png"
                       Width="20"></Image>
            </Button>
            <Button Grid.Column="0"
                    BorderBrush="Transparent"
                    BorderThickness="2"
                    Width="30"
                    Grid.Row="0"
                    Height="30"
                    Margin="0,-3,0,0"
                    Cursor="Hand"
                    Background="Transparent"
                    ClickMode="Press">
                <TextBlock Text="-"
                           Margin="0,-23,0,0"
                           Foreground="Gray"
                           FontSize="45" />
            </Button>
        </Grid>
    </Grid>
</Window>
